generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String              @id @default(cuid())
  name               String?
  email              String              @unique
  emailVerified      DateTime?
  image              String?
  role               Role                @default(STUDENT)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  password           String?
  accounts           Account[]
  activities         Activity[]
  announcements      Announcement[]
  attendanceRecords  AttendanceRecord[]
  attendanceSessions AttendanceSession[]
  appointedHeads     CoeHead[]           @relation("HeadAppointer")
  coeHeadOf          CoeHead[]           @relation("UserAsHead")
  invitedStudents    CoeStudent[]        @relation("StudentInviter")
  studentIn          CoeStudent?
  createdCoes        Coe[]               @relation("CreatedCoes")
  sentInvitations    Invitation[]
  sessions           Session[]
}

model Account {
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Coe {
  id                 String              @id @default(cuid())
  name               String
  description        String?
  code               String              @unique
  active             Boolean             @default(true)
  createdBy          String
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  activities         Activity[]
  announcements      Announcement[]
  attendanceSessions AttendanceSession[]
  heads              CoeHead[]
  students           CoeStudent[]
  creator            User                @relation("CreatedCoes", fields: [createdBy], references: [id])
  invitations        Invitation[]

  @@map("coes")
}

model CoeHead {
  id          String   @id @default(cuid())
  coeId       String
  userId      String
  appointedBy String
  appointedAt DateTime @default(now())
  appointer   User     @relation("HeadAppointer", fields: [appointedBy], references: [id])
  coe         Coe      @relation(fields: [coeId], references: [id], onDelete: Cascade)
  user        User     @relation("UserAsHead", fields: [userId], references: [id])

  @@unique([coeId, userId])
  @@map("coe_heads")
}

model CoeStudent {
  id        String   @id @default(cuid())
  coeId     String
  userId    String   @unique
  joinedAt  DateTime @default(now())
  invitedBy String?
  coe       Coe      @relation(fields: [coeId], references: [id], onDelete: Cascade)
  inviter   User?    @relation("StudentInviter", fields: [invitedBy], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@map("coe_students")
}

model Announcement {
  id          String   @id @default(cuid())
  coeId       String
  createdById String
  title       String
  content     String
  isPinned    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  coe         Coe      @relation(fields: [coeId], references: [id], onDelete: Cascade)
  author      User     @relation(fields: [createdById], references: [id])

  @@map("announcements")
}

model AttendanceSession {
  id             String             @id @default(cuid())
  coeId          String
  createdById    String
  sessionDate    DateTime           @db.Date
  sessionType    SessionType
  qrSecret       String?
  totpSecret     String?
  locationLat    Decimal?
  locationLng    Decimal?
  locationRadius Decimal?
  startsAt       DateTime
  endsAt         DateTime
  isActive       Boolean            @default(true)
  records        AttendanceRecord[]
  coe            Coe                @relation(fields: [coeId], references: [id])
  creator        User               @relation(fields: [createdById], references: [id])

  @@map("attendance_sessions")
}

model AttendanceRecord {
  id          String            @id @default(cuid())
  sessionId   String
  userId      String
  markedAt    DateTime          @default(now())
  method      SessionType
  locationLat Decimal?
  locationLng Decimal?
  verified    Boolean           @default(false)
  ipAddress   String?
  deviceInfo  String?
  session     AttendanceSession @relation(fields: [sessionId], references: [id])
  user        User              @relation(fields: [userId], references: [id])

  @@unique([sessionId, userId])
  @@map("attendance_records")
}

model Activity {
  id           String       @id @default(cuid())
  userId       String
  coeId        String
  activityDate DateTime     @db.Date
  type         ActivityType
  title        String
  description  String?
  hoursSpent   Decimal?
  proofUrl     String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  coe          Coe          @relation(fields: [coeId], references: [id])
  user         User         @relation(fields: [userId], references: [id])

  @@map("activities")
}

model Invitation {
  id           String    @id @default(cuid())
  coeId        String
  invitedEmail String
  invitedById  String
  role         Role
  token        String    @unique
  expiresAt    DateTime
  usedAt       DateTime?
  createdAt    DateTime  @default(now())
  coe          Coe       @relation(fields: [coeId], references: [id], onDelete: Cascade)
  inviter      User      @relation(fields: [invitedById], references: [id])

  @@map("invitations")
}

enum Role {
  SUPER_ADMIN
  ADMIN
  COE_HEAD
  STUDENT
}

enum SessionType {
  QR
  TOTP
  MANUAL
}

enum ActivityType {
  HACKATHON
  RESEARCH
  PROJECT
  OTHER
}
